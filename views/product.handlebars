<div class="row">
  <div class="col-md-6">
    <img 
      src="{{product.thumbnail}}" 
      alt="{{product.title}}" 
      class="img-fluid rounded shadow-sm"
    />
  </div>

  <div class="col-md-6">
    <h2>{{product.title}}</h2>
    <p class="text-muted">{{product.description}}</p>
    <h4 class="mt-3">Precio: ${{product.price}}</h4>

    <a href="/carts/1?add={{product._id}}" class="btn btn-success mt-4 w-100">
      Agregar al carrito
    </a>

    <a href="/" class="btn btn-outline-secondary mt-3 w-100">
      Volver al listado
    </a>
  </div>
</div>
